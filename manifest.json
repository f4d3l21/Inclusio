{
  "manifest_version": 3,
  "name": "Inclusio",
  "description": "Extension d'accessibilité personnalisable pour améliorer le confort de lecture.",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "styles/style.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}